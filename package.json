{
  "name": "fluentflow-app",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode development --config config/vite.config.ts",
    "build": "tsc --project config/tsconfig.json && vite build --mode production --config config/vite.config.ts",
    "build:dev": "tsc --project config/tsconfig.json && vite build --mode development --config config/vite.config.ts",
    "build:analyze": "npm run build && npx vite-bundle-analyzer",
    "preview": "vite preview --config config/vite.config.ts",
    "deploy": "gh-pages -d dist",
    "test": "vitest run --config config/vitest.config.ts --reporter=verbose --silent",
    "test:watch": "vitest --config config/vitest.config.ts",
    "test:coverage": "vitest run --coverage --config config/vitest.config.ts",
    "test:coverage:ci": "vitest run --coverage --config config/vitest.config.ts",
    "test:coverage:validate": "npm run test:coverage && node -e \"const fs = require('fs'); if (!fs.existsSync('./coverage/lcov.info')) { console.error('âŒ lcov.info not found'); process.exit(1); } else { console.log('âœ… Coverage files generated successfully'); }\"",
    "ci:diagnose": "node scripts/ci/diagnose-coverage.js",
    "test:unit": "vitest run tests/unit --config config/vitest.config.ts --reporter=verbose --silent",
    "test:unit:ci": "vitest run tests/unit --config config/vitest.config.ts",
    "test:integration": "vitest run tests/integration --config config/vitest.config.ts --silent",
    "test:integration:ci": "vitest run tests/integration --config config/vitest.config.ts",
    "test:e2e": "vitest run tests/e2e --config config/vitest.config.ts --reporter=verbose --silent",
    "test:ui": "vitest --ui",
    "test:css": "vitest run tests/unit/styles tests/integration/css --config config/vitest.config.ts --reporter=verbose --silent",
    "test:bem": "node scripts/validation/validate-bem-compliance.js",
    "test:tokens": "node scripts/validation/validate-design-tokens.js",
    "test:ai-patterns": "node scripts/validation/validate-ai-patterns.js",
    "test:ai-tokens": "node scripts/validation/validate-ai-design-tokens.js",
    "test:ai-compliance": "node scripts/validation/validate-ai-compliance.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 20 --config config/eslint.config.js",
    "lint:fix": "eslint . --ext ts,tsx --fix --config config/eslint.config.js",
    "format": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --config config/.prettierrc --ignore-path config/.prettierignore --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit --project config/tsconfig.json",
    "cleanup": "node scripts/analysis/cleanup.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:production": "npm audit --audit-level=high --production",
    "security:audit:critical": "npm audit --audit-level=critical",
    "security:patterns": "node scripts/security/security-patterns.js",
    "security:licenses": "npx license-checker --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD;Python-2.0;BlueOak-1.0.0;MIT-0;CC-BY-4.0;MIT*;(AFL-2.1 OR BSD-3-Clause);(MIT OR CC0-1.0);MIT AND ISC' --excludePrivatePackages",
    "build:verify": "node scripts/build/verify-build.js",
    "build:size-check": "node scripts/build/check-bundle-size.js",
    "cache-logs:toggle": "node scripts/development/toggle-cache-logs.js",
    "dev-tools": "node scripts/development/dev-tools.js",
    "validate:links": "node scripts/validation/check-all-links.js",
    "validate:modules": "node scripts/validation/fix-module-types.js",
    "validate:all": "node scripts/validation/validate-all.js",
    "css:analyze": "node scripts/analysis/css-bundle-analyzer.js",
    "css:bundle-check": "node scripts/validation/check-css-chunks.js",
    "css:validate": "npm run test:bem && npm run test:tokens && npm run css:bundle-check",
    "css:ai-validate": "npm run test:ai-compliance",
    "css:audit-deps": "echo 'Tailwind completely removed - using pure CSS architecture'",
    "pipeline": "node scripts/development/dev-tools.js interactive",
    "pipeline:quality": "node scripts/development/dev-tools.js quality",
    "pipeline:security": "node scripts/development/dev-tools.js security",
    "pipeline:build": "node scripts/development/dev-tools.js build",
    "pipeline:all": "node scripts/development/dev-tools.js all",
    "ci:quality": "node scripts/development/dev-tools.js quality --ci-mode",
    "ci:security": "node scripts/development/dev-tools.js security --ci-mode",
    "ci:build": "node scripts/development/dev-tools.js build --ci-mode",
    "ci:all": "node scripts/development/dev-tools.js all --ci-mode",
    "commit": "node scripts/git/smart-commit.js",
    "commit:auto": "node scripts/git/smart-commit.js --auto",
    "commit:push": "node scripts/git/smart-commit.js --stage-all --push",
    "flow": "npm run pipeline",
    "flow:quick": "node scripts/development/dev-tools.js commit",
    "flow:safe": "node scripts/development/dev-tools.js safe",
    "build:full": "node scripts/development/dev-tools.js full",
    "test-scripts": "node scripts/development/test-runner.js",
    "validate:integration": "node scripts/development/validate-integration.js",
    "gh:status": "node scripts/git/gh-status.js status",
    "gh:current": "node scripts/git/gh-status.js current",
    "gh:watch": "node scripts/git/gh-status.js watch",
    "gh:logs": "node scripts/git/gh-status.js logs",
    "deploy:validate": "node scripts/deployment/validate-pages-deployment.js",
    "deploy:check": "curl -s -o /dev/null -w 'HTTP Status: %{http_code}\\nResponse Time: %{time_total}s\\nURL: %{url_effective}\\n' https://gsphome.github.io/englishgame5/",
    "deploy:status": "node scripts/deployment/validate-pages-deployment.js",
    "deploy:explain": "node scripts/deployment/deployment-status-helper.js",
    "deploy:quick": "node scripts/deployment/deployment-status-helper.js quick",
    "flow:full": "npm run build:full",
    "tools": "node scripts/tools.js",
    "tools:list": "node scripts/tools.js list",
    "tools:status": "node scripts/tools.js status",
    "matching:status": "node scripts/tools.js matching status",
    "matching:validate": "node scripts/tools.js matching validate",
    "matching:fix": "node scripts/tools.js matching fix",
    "matching:all": "node scripts/tools.js matching all",
    "debug:pipeline": "echo 'ðŸ› Pipeline debugging info:' && echo 'Node version:' && node --version && echo 'NPM version:' && npm --version && echo 'Dependencies status:' && npm ls --depth=0 2>/dev/null | head -10 && echo 'Build environment:' && npm run type-check --silent && echo 'âœ… Debug info collected'",
    "build:light": "npm run build && git add . && npm run commit:auto && git push"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@tanstack/react-query": "^5.62.7",
    "fuse.js": "^7.0.0",
    "i18next": "^25.4.1",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "react-i18next": "^15.1.2",
    "recharts": "^2.15.4",
    "zod": "^3.24.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  }
}